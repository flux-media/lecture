<%= link_to 'New', admin_users_new_path, {class: 'pure-button'} %>

<table class="pure-table">
  <thead>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admin_edit_user_path(user.id) %></td>
        <td>
          <%= form_tag admin_delete_user_path(user.id), {method: 'delete'} do %>
              <%= submit_tag 'Delete', {class: 'pure-button'} %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
