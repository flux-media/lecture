<% banner_thumbnail_url @course.thumbnail %>

<div class="courses">
  <aside><%= @course.detail %></aside>
</div>

<table class="pure-table custom-table">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Date</th>
  </tr>
  </thead>
  <tbody>
  <% @course.lessons.each_with_index do |lesson, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= lesson.name %></td>
        <!-- TODO: Insert held_at here. -->
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="teacher">
  <h2>Teacher info</h2>
  <% @course.teachers.each do |teacher| %>
      <p>
        <%= teacher.user.name %> : <%= teacher.description %>
      </p>
  <% end %>
</div>

<div class="registration">
  <% if @is_registration_possible %>
      <%= form_tag new_registration_path(@course.id), class: 'pure-form' do %>
          <%= submit_tag 'Register now!', class: 'pure-button pure-button-primary' %>
      <% end %>
  <% else %>
      <%= form_tag delete_registration_path(@course.id), class: 'pure-form', method: 'delete' do %>
          <%= submit_tag 'Cancel registration', class: 'button-warning pure-button' %>
      <% end %>
  <% end %>
</div>

<% content_for :banner do %>
    <h1 class="banner-head"><%= @course.name %></h1>
<% end %>