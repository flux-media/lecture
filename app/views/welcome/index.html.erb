<% unless @programs == nil %>
	<% @programs.each do |program| %>
		<h1>Program: <%= program.name %></h1>

		<% program.courses.each do |course| %>
			<h2>Course: <%= course.id %>. <%= course.name %></h2>

			<p>
			<% course.teachers.each do |teacher| %>
				Teacher: <%= teacher.user.name %>
			<% end %>
			</p>

			<% course.lessons.each do |lesson| %>
				<h3>Lesson: <%= lesson.id %>. <%= lesson.name %></h3>
			<% end %>
		<% end %>
	<% end %>
<% end %>

<% if current_user %>
<h3>Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %></h3>
<% else %>
<h3><%= link_to 'Sign up', signup_path %> | <%= link_to 'Log in', login_path %></h3>
<% end %>
