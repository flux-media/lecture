<div class="form-wrapper">
  <%= form_for :user,
               url: login_path,
               html: {
                       id: 'session-new',
                       class: 'pure-form pure-form-stacked'} do |f| %>
      <%= hidden_field_tag 'target', target %>
      <fieldset>
        <%= f.label User.human_attribute_name('email') %>
        <%= f.text_field :email, {class: 'input-big'} %>

        <%= f.label User.human_attribute_name('password') %>
        <%= f.password_field :password, {class: 'input-big'} %>
      </fieldset>

      <%= submit_tag t('login'), class: 'ladda-button' %>
  <% end %>

  <%= content_tag 'div', id: 'sign_up_by_provider_path',
                  data: {url: sign_up_by_provider_path} do %>
  <% end %>

  <%= button_tag t('login_with_facebook'),
                 {id: 'sign-up-with-facebook-button',
                  class: 'ladda-button',
                  'data-style' => 'expand-right'} %>
</div>
