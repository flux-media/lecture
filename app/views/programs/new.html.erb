<% admin_title(Program.model_name.human) %>
<% admin_subtitle(t(action)) %>

<%= form_for @program,
             url: {action: action},
             html: {class: 'pure-form pure-form-stacked'} do |f| %>
    <fieldset>
      <%= f.hidden_field :id %>

      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
          <%= Program.human_attribute_name('name') %>: <%= f.text_field :name %>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <%= Category.model_name.human %>:
          <%= select_tag :category,
                         options_from_collection_for_select(
                                 categories, 'id', 'name',
                                 @program.category.nil? ? categories.first.id :
                                         @program.category.id) %>
        </div>
      </div>
    </fieldset>
    <%= submit_tag t('submit'), class: 'pure-button pure-button-primary' %>
<% end %>
