<% admin_title(Category.model_name.human) %>
<% admin_subtitle(t(action)) %>

<%= form_for @category,
             url: {action: action},
             html: {class: 'pure-form pure-form-stacked'} do |f| %>
    <fieldset>
      <%= f.hidden_field :id %>

      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
          <%= Category.human_attribute_name('name') %>: <%= f.text_field :name %>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <%= Category.human_attribute_name('slug') %>: <%= f.text_field :slug, :required => true %>
        </div>
      </div>
    </fieldset>
    <%= submit_tag t('submit'), class: 'pure-button pure-button-primary' %>
<% end %>
