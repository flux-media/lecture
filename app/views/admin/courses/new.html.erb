<% admin_title(Course.model_name.human) %>
<% admin_subtitle(t(action)) %>

<%= form_for @course,
             url: {action: action},
             html: {class: 'pure-form pure-form-stacked',
                    multipart: true} do |f| %>
    <fieldset>
      <%= f.hidden_field :id %>

      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-2-3">
          <%= f.label :title, Course.human_attribute_name('title') %>
          <%= f.text_field :title, {class: 'pure-u-23-24', required: true} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
          <%= f.label :slug, Course.human_attribute_name('slug') %>
          <%= f.text_field :slug, {class: 'pure-u-23-24', required: true} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-2">
          <%= f.label :date, Course.human_attribute_name('date') %>
          <%= f.text_field :date, {class: 'pure-u-23-24', required: true} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-2">
          <%= f.label :location, Course.human_attribute_name('location') %>
          <%= f.text_field :location, {class: 'pure-u-23-24'} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4">
          <%= f.label :is_public, Course.human_attribute_name('is_public') %>
          <%= f.check_box :is_public %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4">
          <%= f.label :is_on_sale, Course.human_attribute_name('is_on_sale') %>
          <%= f.check_box :is_on_sale %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4">
          <%= f.label :is_full, Course.human_attribute_name('is_full') %>
          <%= f.check_box :is_full %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4">
          <%= f.label :is_past, Course.human_attribute_name('is_past') %>
          <%= f.check_box :is_past %>
        </div>

        <div class="pure-u-1 pure-u-md-1-6">
          <%= f.label :max_students, Course.human_attribute_name('max_students') %>
          <%= f.number_field :max_students, {class: 'pure-u-23-24'} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-6">
          <%= f.label :students_enrolled, Course.human_attribute_name('students_enrolled') %>
          <%= f.number_field :students_enrolled, {class: 'pure-u-23-24'} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-6">
          <%= f.label :duration, Course.human_attribute_name('duration') %>
          <%= f.number_field :duration, {class: 'pure-u-23-24'} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-6">
          <%= f.label :original_price, Course.human_attribute_name('original_price') %>
          <%= f.number_field :original_price, {class: 'pure-u-23-24'} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-6">
          <%= f.label :sale_price, Course.human_attribute_name('sale_price') %>
          <%= f.number_field :sale_price, {class: 'pure-u-23-24'} %>
        </div>

        <div class="pure-u-1 pure-u-md-2-3">
          <%= f.label :summary, Course.human_attribute_name('summary') %>
          <%= f.text_area :summary, {class: 'pure-u-23-24'} %>
        </div>

        <div class="pure-u-1 pure-u-md-2-3">
          <%= f.label :detail, Course.human_attribute_name('detail') %>
          <%= f.text_area :detail, {class: 'pure-u-23-24'} %>
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
          <%= f.label :thumbnail, Course.human_attribute_name('thumbnail') %>

          <%= image_tag @course.thumbnail.url(:medium), class: 'thumbnail' %>
          <%= f.file_field :thumbnail %>

          <label for="delete_thumbnail">
            <%= check_box_tag :delete_thumbnail %> <%= t('update') %>, <%= t('delete') %>
          </label>
        </div>
      </div>
    </fieldset>
    <%= submit_tag t('submit'), class: 'pure-button pure-button-primary' %>
<% end %>
