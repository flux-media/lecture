<% admin_title(Teacher.model_name.human) %>
<% admin_subtitle(t(action)) %>

<%= form_for @teacher,
             url: url,
             html: {class: 'pure-form pure-form-stacked'} do |f| %>
    <fieldset>
      <%= f.hidden_field :id %>

      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-4">
          <%= f.label :name,
                      Teacher.human_attribute_name('name') %>
          <%= f.text_field :name %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4">
          <%= f.label :facebook_url,
                      Teacher.human_attribute_name('facebook_id') %>
          <%= f.text_field :facebook_url %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4">
          <%= f.label :blog_url,
                      Teacher.human_attribute_name('blog_url') %>
          <%= f.text_field :blog_url %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4">
          <%= f.label :twitter_id,
                      Teacher.human_attribute_name('twitter_id') %>
          <%= f.text_field :twitter_id %>
        </div>

        <div class="pure-u-1 pure-u-md-2-3">
          <%= f.label :description,
                      Teacher.human_attribute_name('description') %>
          <%= f.text_area :description %>
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
          <%= f.label :thumbnail, Teacher.human_attribute_name('thumbnail') %>

          <%= image_tag @teacher.thumbnail.url(:thumb), class: 'thumbnail' %>
          <%= f.file_field :thumbnail %>

          <label for="delete_thumbnail">
            <%= check_box_tag :delete_thumbnail %> <%= t('update') %>, <%= t('delete') %>
          </label>
        </div>
      </div>
    </fieldset>
    <%= submit_tag t('submit'), class: 'pure-button pure-button-primary' %>
<% end %>