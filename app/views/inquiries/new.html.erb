<div class="form-wrapper">
  <%= form_tag inquiries_path,
               {id: 'new-inquiry',
                class: 'pure-form pure-form-stacked'} do %>
      <fieldset>
        <%= label_tag User.human_attribute_name('name') %>
        <%= text_field_tag :name, current_user.nil? ? '' : current_user.name,
                           {class: 'input-big'} %>

        <%= label_tag User.human_attribute_name('email') %>
        <%= text_field_tag :email, current_user.nil? ? '' : current_user.email,
                           {type: 'email',
                            class: 'input-big'} %>

        <%= label_tag t('content') %>
        <%= text_area_tag :content, '',
                          {class: 'input-big-2',
                           cols: 30,
                           rows: 5} %>
      </fieldset>

      <%= button_tag t('submit'),
                     {id: 'new-inquiry-button',
                      class: 'ladda-button',
                      :'data-style' => 'expand-right'} %>
  <% end %>
</div>
