<%= form_for @lesson, url: {action: 'create'}, html: {class: 'pure-form pure-form-stacked'} do |f| %>
    <fieldset>
      <legend>
        <%= action %> lesson
      </legend>
      Name: <%= f.text_field :name %>
      <%= f.hidden_field :id %>
    </fieldset>
    <%= submit_tag action, class: 'pure-button pure-button-primary' %>
<% end %>
